# XMind2TestCase 配置文件示例
# 复制此文件为 .env 并根据需要修改

# 应用配置
DEBUG=true
APP_NAME=XMind2TestCase
APP_VERSION=2.0.0

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 数据库配置
DATABASE_PATH=data.db3

# 文件上传配置
UPLOAD_FOLDER=uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=xmind

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 安全配置（生产环境请修改）
SECRET_KEY=your-secret-key-here-change-in-production
CORS_ORIGINS=*

# 功能开关
ENABLE_API_DOCS=true
ENABLE_METRICS=false
